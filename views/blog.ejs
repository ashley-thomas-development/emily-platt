<%- include("../views/partials/header.ejs") -%>

<h2>Welcome to the Blog!</h2>

<% postInfo.forEach(function(post) { %>
<div>
    <div style="display: inline-block;"><img src=<%=post.imgURL%>></div>
    <div style="display: inline-block; margin: 20px;">
        <h3><%=post.title%></h3>
        <p><%=post.date%></p>
        <p><%=post.desc%></p>
        <p><a href='./posts/<%=post.filename%>'> ...Read More</a></p>
    </div>
</div>
<% }); %>

